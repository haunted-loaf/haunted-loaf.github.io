{
  "include": ["src/*", "types/**/*"],
  "exclude": ["node_module/**"],
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx"
  },
  "ts-node": {
    "files": true
  }
}
